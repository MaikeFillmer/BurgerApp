<div class="row" style="position: absolute; height: 1000px; width: 100%; top: 0">

	<div class="col s12 m5 white" style="min-height: 100%; height: 100%">

		<!--LOGO-->
		<div class="row">
			<div class="col s12" style="padding: 10px">
				<h5>Eat-A-Burger</h5>
			</div>
		</div>

		<!--ADD BURGER SECTION-->
		<div class="row" style="margin-bottom: 0;">
			<div class="col s12" style="padding: 0 10%">
				<form action="/add" method="POST">
					<input type="text"
					       class="index_add blink"
					       name="new_burger"
					       id=""
					       placeholder="What kind of burger do you want to eat?"

						>
					<button type="submit"
					        class="btn"
					        id="" style="background-color: #FFC107">Add to menu</button>
				</form>
			</div>
		</div>
	</div> <!-- End left side info -->

	<div class="col s12 m7 blue" style="min-height: 100%; height: 100%; padding: 5% 5%; background-color: #0288D1">

		<!--SEE BURGER SECTION-->
		<div>
			<h3>Your Burgers</h3>
			<div>

				{{#each burgerData}}
					{{#if this.devoured}}

						<!--EATEN BURGER SECTION-->
						<div>

							<pre style="color:darkred; text-decoration: line-through;">{{this.id}}. {{this.burgerName}}</pre>
							<p style="color:#FFC107;">Burger Eaten!</p>
						</div>

					{{else}}

						<!--AVAILABLE BURGER SECTION-->

						<div class="card-panel blue lighten-3">

							<pre style="color:white;">{{this.id}}. {{this.burgerName}}</pre>
							<form method="POST" action="/eat?_method=PUT">
								<input type="hidden" type="text" name="burger_id" value={{this.id}}>
								<button type="submit" class="btn" style="background-color: #FFC107">Eat</button>
							</form>
						</div> <!-- End availale burger section -->

					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
</div>